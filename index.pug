mixin nav-a(img, textZH, textEN)
    a(href="#")
        img(src="images/" + img + ".png" alt="連結 縮圖")
        span=textZH
        br
        span=textEN

mixin title(img, textZH, textEN)
    div(class="title")
        img(src="images/" + img + ".png" alt="連結 縮圖")
        span=textZH
        br
        span=textEN

mixin loaction-box(nameZh, nameEg, img)
    div(class="location-box")
        div(class="location-title")
            div(class="location-text")
                span=nameZh
                br
                span=nameEg
            img(src="images/location.png", alt="據點")
        img(src="images/" + img + ".png", alt="據點")

